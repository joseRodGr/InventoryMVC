@model IEnumerable<InventoryMVC.Models.ViewModels.ProductViewModel>

@{
    var supplierName = (string)ViewBag.SupplierName;
    var suppliertId = (int)ViewBag.SupplierId;
}

<div class="container">
    <div class="text-right">
        <a class="btn btn-primary mb-3" asp-controller="ProductSupplier" asp-action="AddProduct" asp-route-id="@suppliertId">
            Add product
        </a>
        <a class="btn btn-secondary mb-3" asp-controller="Supplier" asp-action="Index">
            Go back
        </a>
    </div>
    <h1>Products for @supplierName</h1>
    @if (Model.Count() > 0)
    {
        <div class="row">

            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Ammount)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>@Html.DisplayNameFor(model => model.Price)</th>
                        <th>@Html.DisplayNameFor(model => model.CategoryName)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => product.Name)</td>
                        <td>@Html.DisplayFor(modelItem => product.Ammount)</td>
                        <td>@Html.DisplayFor(modelItem => product.Description)</td>
                        <td>@Html.DisplayFor(modelItem => product.Price)</td>
                        <td>@Html.DisplayFor(modelItem => product.CategoryName)</td>
                    </tr>
                    }
                </tbody>
            </table>

        </div>
    }
    else
    {
        <h5>There are not products registered for this supplier</h5>
    }
</div>

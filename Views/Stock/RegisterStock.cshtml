@model InventoryMVC.Models.ViewModels.CreateInventoryViewModel

@{
    ViewData["Title"] = "Inputs / Outputs";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <form asp-controller="Stock" asp-action="RegisterStock" method="post" class="py-4 px-3 rounded" autocomplete="off">
                <h2>Stock Registration</h2>
                <div asp-validation-summary="ModelOnly"></div>
                <input class="form-control" asp-for="ProductId" type="hidden" />

                <div class="form-group">
                    <label >Product</label>
                    <input class="form-control" value="@ViewBag.ProductName" readonly />
                </div>

                <div class="form-group">
                    <label>Current Stock</label>
                    <input class="form-control" value="@ViewBag.CurrentStock" readonly />
                </div>

                <div class="form-group">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="Type" id="inlineRadio1" value="Input" checked>
                        <label class="form-check-label" for="inlineRadio1">Input</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="Type" id="inlineRadio2" value="Output">
                        <label class="form-check-label" for="inlineRadio2">Output</label>
                    </div>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Ammount"></label>
                    <input class="form-control" asp-for="Ammount" />
                    <span asp-validation-for="Ammount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="REGISTER" />
                    <a asp-controller="Stock" asp-action="Index" class="btn btn-secondary">CANCEL</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles{
    <link href="~/css/formPage.css" rel="stylesheet" type="text/css" />
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

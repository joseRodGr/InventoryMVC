@model InventoryMVC.Models.ViewModels.EditInventoryViewModel

@{
    ViewData["Title"] = "Edit stock movement";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <form asp-controller="Stock" asp-action="Edit" method="post" class="py-4 px-3 rounded" autocomplete="off">
                <h1>Edit Supplier</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label>Product</label>
                    <input value="@ViewBag.ProductName" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label Registration Date></label>
                    <input value="@ViewBag.RegisterDate" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Type" id="inlineRadio1" value="Input" checked>
                        <label class="form-check-label" for="inlineRadio1">Input</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Type" id="inlineRadio2" value="Output">
                        <label class="form-check-label" for="inlineRadio2">Output</label>
                    </div>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Ammount"></label>
                    <input class="form-control" asp-for="Ammount" />
                    <span asp-validation-for="Ammount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="EDIT" />
                    <a asp-controller="Stock" asp-action="Movements" asp-route-id="@ViewBag.ProductId" class="btn btn-secondary">CANCEL</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles{
    <link href="~/css/formPage.css" rel="stylesheet" type="text/css" />
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

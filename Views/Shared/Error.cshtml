@model InventoryMVC.Models.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

@if (ViewBag.Header == null)
{
    <div class="mb-4">
        <h1 class="text-danger">Internal Server Error</h1>
    </div>
    <div class="mb-4">
        <h4>An error occurred while processing your request.</h4>
        @if (Model.ShowRequestId)
        {
            <p>
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }

    </div><div>
        <h5>Please contact the administrator at <span class="text-primary">admin@cv.com</span></h5>
    </div>  }
else 
{
    <h1 class="text-danger mb-3">@ViewBag.Header</h1>
    <p class="text-danger">@ViewBag.Message</p>
}




